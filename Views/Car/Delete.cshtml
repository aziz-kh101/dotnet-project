@model MyApp.Namespace.CarDeleteModel
@{
    ViewData["Title"] = "Delete Car";
}

<h1>Delete Car</h1>

<form method="post" asp-action="DeletePost" class="d-flex flex-column gap-2 ">
    <img src=@("/images/"+ Url.Content(Model.Car.Image)) class="car-img" />
    <input asp-for="Car.Id" class="form-control" hidden />
    <div class="form-group">
        <label asp-for="Car.Model"></label>
        <input asp-for="Car.Model" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Car.Brand"></label>
        <input asp-for="Car.Brand" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Car.Price"></label>
        <input asp-for="Car.Price" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Car.Year"></label>
        <input asp-for="Car.Year" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Car.Description"></label>
        <input asp-for="Car.Description" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Car.Category.Name">Category Name</label>
        <input asp-for="Car.Category.Name" class="form-control" disabled />
    </div>
    <button type="submit" class="btn btn-danger">Confirm Delete</button>
    <a asp-action="List" class="btn btn-secondary">Cancel</a>
</form>