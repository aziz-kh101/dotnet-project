@model MyApp.Namespace.CategoryDeleteModel
@{
    ViewData["Title"] = "Delete Category";
}

<h1>Delete Category</h1>

<form method="post" asp-action="DeletePost" class="d-flex flex-column gap-2 ">
    <input asp-for="Id" class="form-control" hidden />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" disabled />
    </div>
    <button type="submit" class="btn btn-danger">Confirm Delete</button>
    <a href="/Category/List" class="btn btn-secondary">Cancel</a>
</form>